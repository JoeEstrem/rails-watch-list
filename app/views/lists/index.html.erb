<div class="page-container">
<div style= "display: flex; align-items: center;">
<h1>Your Movie Lists</h1>
<%= link_to 'Create List', new_list_path, class: "view-btn", style: "margin-left: 16px;"%>
</div>
  <div>
    <% @lists.each do |list| %>
      <div>
        <div class="list-card">
          <div style= "display: flex; align-items: center;">
            <%= image_tag list.photo, class: 'list_photo' %>
            <h3 style="margin-left: 16px;"><%= list.name.capitalize %></h3>
          </div>
          <div>
          <%= link_to 'view', list_path(list), class: "view-btn" %>
          <%= link_to 'X', list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Delete List?' }, class: "delete-btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
